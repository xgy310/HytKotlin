<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    >
  <ImageView
      android:id="@+id/iv_user_face"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="120dp"
      android:background="@color/trans_half_1"
      android:scaleType="center"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/til_loc"
      app:layout_constraintTop_toTopOf="parent"
      />

  <LinearLayout
      android:id="@+id/ll_pick_pic"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="@id/iv_user_face"
      app:layout_constraintLeft_toLeftOf="@id/iv_user_face"
      app:layout_constraintRight_toRightOf="@id/iv_user_face"
      app:layout_constraintTop_toTopOf="@id/iv_user_face"
      >


    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_photo_library_black_24dp"
        />
    <Button
        android:id="@+id/btn_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        android:text="从相册选一张"
        android:textColor="@color/white"
        android:textSize="14sp"
        />
  </LinearLayout>
  <android.support.design.widget.TextInputLayout
      android:id="@+id/til_username"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="4dp"
      android:textColorHint="@color/white_a77"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/iv_user_face"
      >

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="请出入昵称"
        android:maxLines="1"
        android:minWidth="120dp"
        android:textColor="@color/white"
        />
  </android.support.design.widget.TextInputLayout>


  <Button
      android:id="@+id/btn_confirm"
      android:layout_width="0dp"
      android:layout_height="44dp"
      android:layout_margin="20dp"
      android:text="确认"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      />
</android.support.constraint.ConstraintLayout>


